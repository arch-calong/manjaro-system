[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = networkmanager

[Action]
Description = Changing NetworkManager Connectivity-Ping to manjaro.org
When = PostTransaction
Depends = networkmanager
Exec = /bin/bash -c 'sed -i -e "s!http://archlinux.org!http://ping.manjaro.org!g" /usr/lib/NetworkManager/conf.d/20-connectivity.conf'
